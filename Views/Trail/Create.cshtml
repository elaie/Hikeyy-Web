@model Hikeyy.Models.TrailModel

@{
    ViewData["Title"] = "Create";
}<head>
    <style>
        .form-control{
            background: rgba(253, 253, 253, 0);
            /*outline: none;*/
            border: 0.5px solid black;
            border-radius: 0.5rem;
            padding: 10px;
            margin: 10px auto;
            width: 80%;
            display: block;
            color: #425981;
            font-weight: 500;
            font-size: 1em;
            
        }
        .control-label{
            color:black;
            font-size:19px;
        }
        h1{
            color:#8a9c7d
        }
    </style>
</head>


<h1>Create a new trail</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" style="background-color: #EDEEE3;
  border-radius: 20px;
  box-sizing: border-box;
  height: 100%;
  padding: 20px;
  width: 900px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BestMonths" class="control-label" ></label>
                <div class="bstmnth" style="margin-left:90px;">
                    @{
                    List<string> staticOptions = new List<string> 
                {
                "January",
                "Feburary",
                "March",
                "April",
                "May",
                "June",
                "July",
                "August",
                "September",
                "October",
                "November",
                "December"
                };

                    // Retrieve the selected options (if any) from the model or other sources
                    List<string> selectedOptions = Model.BestMonths; // Replace "Model.SelectedOptions" with your own selected options source
                }

                @foreach (var option in staticOptions)
                {
                    <div>
                        <label>
                            <input type="checkbox" name="BestMonths" value="@option" @(selectedOptions.Contains(option) ? "checked" : "") />
                            @option
                        </label>
                    </div>
                }
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Budget" class="control-label"></label>
                <input asp-for="Budget" class="form-control" style="" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartLatitude" class="control-label"></label>
                <input asp-for="StartLatitude" class="form-control" />
                <span asp-validation-for="StartLatitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartLongitude" class="control-label"></label>
                <input asp-for="StartLongitude" class="form-control" />
                <span asp-validation-for="StartLongitude" class="text-danger"></span>
            </div>
            <div class="form-group">
               <input type="file" name="photos" multiple />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="padding-left:25px;
            width: 100px;
            height: 40px;
            cursor: pointer;
            display: flex;
            align-items: center;
            border: 1px solid grey;
            border-radius:6px;
            background-color: #abbd9a;color:#fff;margin-top:20px; margin-left:18cm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
